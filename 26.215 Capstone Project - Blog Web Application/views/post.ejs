<%- include("partials/header.ejs") %>

<div id="post-<%= postID %>" data-post-id="<%= postID %>" class="post-content">
     <h1><%= title %></h1>
     <p class="pubDate"><em><%= date %></em></p>
     <p class="post-body"><%= content %></p>
</div>

<div class="post-actions">
     <!-- Edit Button -->
     <a href="/edit/<%= postID %>">Edit Post</a> &nbsp;

     <!-- Delete Button (submit form with method POST to trigger delete) -->
     <form action="/delete/<%= postID %>" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete Post</button>
     </form>
</div>
<div class="backbtn"><a href="/">‚Üê Go Back Home</a></div><br />

